<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/vault_list"
        android:name="com.melancholiclabs.eleganterowid.index.IndexFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/vault_scroller"
        app:layoutManager="LinearLayoutManager"
        tools:context=".exp_vault.ExpVaultFragment"
        tools:listitem="@layout/fragment_exp_vault" />

    <xyz.danoz.recyclerviewfastscroller.vertical.VerticalRecyclerViewFastScroller
        android:id="@+id/vault_scroller"
        android:layout_width="@dimen/margin_small"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        app:rfs_handleColor="@color/colorPrimary" />

</RelativeLayout>